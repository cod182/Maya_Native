{
    "expo": {
        "name": "Maya",
        "slug": "maya",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "maya",
        "userInterfaceStyle": "automatic",
        "infoPlist": {
            "NSPhotoLibraryUsageDescription": "Give Expo experiences permission to access your photos"
        },
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true,
            "package": "com.codes.maya"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            }
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-image-picker"
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}